# Demo Terraform configuration for Claude Code enterprise showcase
terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

variable "aws_region" {
  description = "AWS region for demo resources"
  type        = string
  default     = "us-east-1"
}

variable "environment" {
  description = "Environment name"
  type        = string
  default     = "demo"
}

output "demo_output" {
  description = "Demo output for Claude Code testing"
  value       = "Demo infrastructure ready"
}